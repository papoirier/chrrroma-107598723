/* =====================
   0. Custom settings
   ===================== */

// eot
@font-face {
    font-family: MarkWeb;
    src: url('{{ "MarkWeb.eot" | asset_url }}');
}
@font-face {
    font-family: MarkWebBold;
    src: url('{{ "MarkWeb-Bold.eot" | asset_url }}');

}
@font-face {
    font-family: MarkScWeb;
    src: url('{{ "MarkScWeb.eot" | asset_url }}');
}
@font-face {
    font-family: MarkScWebBold;
    src: url('{{ "MarkScWeb-Bold.eot" | asset_url }}');
}

// woff 
@font-face {
    font-family: MarkWeb;
    src: url('{{ "MarkWeb.woff" | asset_url }}') format("woff");
    font-weight: normal;
}
@font-face {
    font-family: MarkWebBold;
    src: url('{{ "MarkWeb-Bold.woff" | asset_url }}') format("woff");
    font-weight: bold;
}
@font-face {
    font-family: MarkScWeb;
    src: url('{{ "MarkScWeb.woff" | asset_url }}') format("woff");
    font-weight: normal;
}
@font-face {
    font-family: MarkScWeb;
    src: url('{{ "MarkScWeb-Bold.woff" | asset_url }}') format("woff");
    font-weight: bold; 
}

/* =====================
   1. Base styles
   ===================== */

html, body {
  background-color: $background-color;
  font-size: $base-font-size;
  line-height: 1.6;
  font-family: $base-font-family;
  color: $text-color;
}

h1, 
h2, 
h3, 
h4, 
h5, 
h6,
a#site-title {
  font-family: $heading-font-family;
  font-weight: $heading-font-weight;
  text-rendering: optimizeLegibility; /* to enable ligatures and kerning */
  @extend .paragraph-margins;
}